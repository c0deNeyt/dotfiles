#!/usr/bin/env bash

# array of my dirs
a=(
/etc/nginx
~/
~/projects/html
~/projects/php
~/.local/src
~/.config/nvim
)

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(find "${a[@]}" -mindepth 1 -maxdepth 1 -type d | dmenu -vi  -l 10)
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]]; then
	tmux a -t $selected_name >/dev/null 2>&1 && true || tmux new-session -s $selected_name -c $selected 
	exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
	tmux new-session -ds $selected_name -c $selected
fi
tmux switch-client -t $selected_name
